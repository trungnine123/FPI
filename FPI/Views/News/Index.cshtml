@model IEnumerable<FPI.Models.NewsItem>
<!DOCTYPE html>
<html>
<head>
    <title>FPI News</title>
</head>
<body>
    <h1>Latest News</h1>
    @foreach (var item in Model)
    {
        <div>
            <h2>@item.Title</h2>
            <img src="@item.ImageUrl" alt="News Image" style="border-radius: 8px;">
            <p>@item.Content</p>
            <p>Published on: @item.PublishedDate.ToShortDateString()</p>
        </div>
    }
</body>
</html>