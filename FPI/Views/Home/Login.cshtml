@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" /> <!-- Make sure to create this CSS file -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" /> <!-- Include FontAwesome for icons -->

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form>
                    <!-- Title -->
                    <h2 class="mb-4 text-center">Welcome Student ! </h2> <!-- Adjusted title position -->
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Email address</label>
                        <input type="email" id="form1Example13" class="form-control form-control-lg" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example23">Password</label>
                        <input type="password" id="form1Example23" class="form-control form-control-lg" />
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">Or login with:</p>
                            <div class ="container">
                                     <!-- Social buttons -->
                                <a class="btn btn-lg btn-block mb-2" style="background-color: #3b5998; color: white ;" href="https://www.facebook.com/" role="button">
                                    <i class="fab fa-facebook-f me-2" href=""></i>
                                </a>
                                <a class="btn btn-lg btn-block mb-2" style="background-color: #55acee; color: white;" href="https://twitter.com/" role="button">
                                    <i class="fab fa-twitter me-2" href=""></i>
                                </a>
                                <a class="btn btn-lg btn-block" style="background-color: #dd4b39; color: white;" href="#!" role="button">
                                    <i class="fab fa-google me-2" href =""></i>
                                </a>
                            </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>